Basic200 = #e7ecf7;
Basic400 = #D7D7D7;

:global(.theme-dark  .rc-table-expanded-row .rc-table-cell) {
  box-shadow: inset 0 8px 8px -8px #95d3f2;
  // box-shadow: none;
}

:global(.theme-dark  .rc-table-expanded-row > .rc-table-cell) {
  // background-color: #f8f8f8;
  padding 0
}

:global(.theme-dark .rc-table) {
  th, td {
    border: none;
    border-bottom: 1px solid #1B1B1C;
  }

  td {
    padding: 9px 8px;
    font-size: 15px;
    height 70px
  }

  tbody {
    tr {
      td {
        background-color: #1B1B1C;
      }
    }
  }

  thead {
    th {
      background-color: #1B1B1C;
      border-top: 1px solid #1B1B1C;
      border-bottom: 1px solid #1B1B1C;
      text-align: left;
      color: #777777;
    }
  }
}

:global(.theme-dark .rc-table-content) {
  border: 1px solid #1B1B1C;
  border-top: none;
  border-bottom: none;
}

:global(.theme-dark .rc-table-body, .theme-dark .rc-table-header) {
  border-color: Basic200;
}

:global(.theme-dark .rc-table-body::after) {
  border-color: Basic200 !important;
}

:global(.theme-dark .rc-table-cell-fix-left-last::after) {
  box-shadow: inset 10px 0 8px -8px Basic400;
}

:global(.theme-dark .rc-table-ping-left) {
  :global(.theme-dark .rc-table-cell-fix-left-last::after) {
    box-shadow: inset 14px 0 8px -8px Basic400 !important;
  }
}

